{
  "app": {
    "environment": "production"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 80,
    "thread_pool_size": 8,
    "max_connections": 2000
  },
  "database": {
    "path": "/var/lib/work_record/production.db",
    "backup_enabled": true,
    "backup_interval": 3600
  },
  "logging": {
    "level": "warn",
    "console_enabled": false,
    "file_enabled": true,
    "max_files": 10
  },
  "security": {
    "cors_enabled": true,
    "rate_limit_enabled": true,
    "rate_limit_requests": 200,
    "rate_limit_window": 60
  },
  "features": {
    "audit_log_enabled": true,
    "backup_enabled": true,
    "real_time_notifications": false
  },
  "performance": {
    "cache_enabled": true,
    "cache_size": 5000,
    "cache_ttl": 1800
  },
  "backup": {
    "auto_backup_enabled": true,
    "backup_retention_days": 90
  }
} 